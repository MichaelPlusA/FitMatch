@{
    Layout = "~/Views/Shared/_LayoutTrainee.cshtml";
}

@using Capstone.Web.Models

@model Plan


@if (Session[SessionKeys.Email] == null)
{
    <br />
    <h2>Welcome!</h2>
    <br />
}
else
{
    <br />
    <h2>Welcome Trainee @((string)Session[SessionKeys.First_Name])!</h2>
    <br />
}

<div class="jumbotron dark-back">
    <div class="row">
        <div class="col-md-6">
            <h1 class="plan-header">@Model.PlanName</h1>
        </div>
        <div class="col-md-6">
            <button class="btn btn-trainer btn-1 btn-1c">Trainer : @Model.ByTrainer</button>
        </div>
    </div>
    <div id="accordion">
        @{
            int counter = 1;
        }
        @foreach (Workout workout in Model.SeveralWorkouts)
        {
            <div class="card">
                <div class="card-header" id="@("heading" + counter)">
                    <h5 class="mb-0">
                        <button class="btn btn-link" data-toggle="collapse" data-target="@("#collapse" + counter)" aria-expanded="true" aria-controls="collapseOne">
                            @workout.Name
                        </button>
                    </h5>
                </div>
                <div id="@("collapse" + counter)" class="collapse show" aria-labelledby="@("heading" + counter)" data-parent="#accordion">
                    <div class="card-body">
                        @if(workout.RunningAndStuff.Count > 0)
                        {
                            <h3>Cardio</h3>
                            foreach(CardioExercise e in workout.RunningAndStuff)
                            {
                                <div class="workout-exercise">
                                    <a href="">@e.Name</a>
                                    <span class="duration">Time: @e.Duration</span>
                                    <span class="intensity">Intensity: @e.Intensity</span>
                                </div>
                            }
                        }

                        @if(workout.GetBig.Count > 0)
                        {
                            <h3>Strength</h3>
                            foreach(StrengthExercise e in workout.GetBig)
                            {
                                <div class="workout-exercise">
                                    <a href="">@e.Name</a>
                                    <span class="sets">Sets: @e.Sets</span>
                                    <span class="reps">Reps: @e.Reps</span>
                                    <span class="rest-time">Time Between Sets: @e.Rest_time</span>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

            @(counter++)
        }
