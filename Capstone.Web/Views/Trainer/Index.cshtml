@{
    Layout = "~/Views/Shared/_LayoutTrainer.cshtml";
}

@if (Session[SessionKeys.Email] == null)
{
    <br />
    <h1>Welcome!</h1>
    <br />
}
else
{
    <br />
    <h1>Welcome Trainer @((string)Session[SessionKeys.First_Name])!</h1>
    <br />
}

@using Capstone.Web.Models
@model Trainer

<div class="jumbotron trainer-back">
    <div class="container-profile">
        <div class="innerwrap">
            <section class="section1 clearfix">
                <div>
                    <div class="row grid clearfix">
                        <div class="col2 first">
                            <img src="~/Content/img/workout-profile.jpg" />
                            <h1>@((string)Session[SessionKeys.First_Name]) @((string)Session[SessionKeys.First_Name])@*@Model.First_Name @Model.Last_Name*@</h1>

                            <p>@Model.exercise_Philosophy</p>
                            
                            @*<span>@(Model.Searchable == true ? "public" : "private")</span>*@
                        </div>
                        <div class="col2 last">
                            <div class="grid clearfix">
                                <div class="col3 first">
                                    <h1>$@Model.Price_Per_Hour</h1>
                                    <span>Price Per Hour</span>
                                </div>
                                <div class="col3">
                                    <h1>@Model.YearsExp</h1>
                                    <span>Years Experience</span>
                                </div>
                                <div class="col3 last">
                                    <h1>@Model.Rating</h1>
                                    <span>Rating</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">

                    </div>
                </div>
                <span class="smalltri">

                    <i class="fa fa-star"></i>
                </span>
            </section>
            <section class="section2 clearfix">
                <div class="grid">
                    <div class="col3 first">
                        <div class="postcont">
                            <h3>Certifications</h3>
                        </div>
                        <div class="profileinfo">
                            <p>@Model.Certifications</p>
                        </div>
                    </div>
                    <div class="col3 center">
                        <div class="postcont">
                        </div>
                        <div class="profileinfo">
                            <img src="~/Content/img/workout-profile.jpg" alt="">
                            <h3>@Model.User_Location</h3>
                            <p>@Model.Additional_notes</p>
                        </div>
                    </div>
                    <div class="col3 last">
                        <div class="postcont">
                            <h3>Success Stories</h3>
                        </div>
                        <div class="profileinfo">
                            <p>@Model.Client_Success_Stories</p>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>



